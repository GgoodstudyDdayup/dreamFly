/* 横向滚动开始 */

.list {
    margin-top: 50rpx;
}

.scroll {
    background: #fff;
    overflow: hidden;
    width: 100%;
    white-space: nowrap;
    display: flex;
}

.navTitle {
    color: #282828;
    font-size: 26rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    padding: 16rpx 0;
    border-bottom: 1rpx solid #eaeaea;
}

.navTitleLine {
    color: #5bc9d4;
    font-size: 30rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    padding: 16rpx 0;
    border-bottom: 5rpx solid #5bc9d4;
}

.navTitleCon {
    padding: 0 41.6rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-left: 1rpx solid f1f1f1;
    border-right: 1rpx solid #f1f1f1;
}

/* 横向滚动结束 */

/* 搜索开始 */

.searchFa {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
    justify-content: space-between;
    display: flex;
    align-items: center;
    box-shadow: 0rpx 5rpx 10rpx rgb(199, 199, 199);
}

.search {
    padding: 10rpx;
    display: flex;
    align-items: center;
    width: 46%;
}

.search image {
    width: 35rpx;
    height: 30rpx;
}

.input {
    width: 300rpx;
    margin-left:10rpx;

}

.searchInp {
    display: flex;
    align-items: center;
    background: #f1f1f1;
    width: 100%;
    padding: 6rpx 30rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.sousuo {
    font-size: 28rpx;
}

.sousuoText {
    /* font-size: 34rpx; */
    color: white;
    background: #9ddfe5;
    padding: 5rpx 20rpx;
    border-radius: 10rpx;
}

.chooseYear {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #767676;
    line-height: 84rpx;
}

.chooseYear image {
    width: 30rpx;
    height: 25rpx;
    vertical-align: middle;
    /* margin-right: 20rpx;
    margin-left: 13rpx; */
}

/* 搜索结束 */

/* 列表开始 */

.shopList {
    margin: 64rpx;
    box-shadow: 0rpx 5rpx 30rpx rgb(146, 146, 146);
    position: relative;
    border-radius: 10rpx;
}

.shopListPart {
    width: 110%;
    height: 320rpx;
    position: absolute;
    top: 60rpx;
    left: -5%;
    box-shadow: 0rpx 6rpx 16rpx rgb(175, 175, 175);
    border-radius: 10rpx;
    overflow: hidden;
}

.shopListPart image {
    width: 100%;
    height: 100%;
}

.shopListTitle {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    color: #fff;
    font-size: 24rpx;
    font-weight: 700;
    box-sizing: border-box;
    padding: 24rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

/* .shopListTitle :nth-child(1) {
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
} */

.shopListTop {
    box-sizing: border-box;
    position: absolute;
    width: 100%;
    top: 60rpx;
    left: 0;
    padding: 10rpx 0;
    display: flex;
    justify-content: space-between;
    z-index: 1;
}

.shopListTopL {
    color: #060206;
    /* text-align:left; */
}

.year {
    font-size: 24rpx;
    letter-spacing: 40rpx;
}

.line {
    height: 1rpx;
    background: #e6e6e6;
    width: 90%;
    margin: 0 auto;
}

.day {
    font-size: 32rpx;
    font-weight: 800;
    /* padding-right: 15%; */
    color: #fff;
}

.shopListTopR {
    font-size: 32rpx;
    /* line-height: 60rpx; */
    color: #fff;
}

.shopListTopR image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}

.shopListBottom {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.shopListBottomL image {
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.shopListBottomL text {
    color: #9f9f9f;
    font-size: 24rpx;
    margin-right: 16rpx;
    margin-left: 4rpx;
}

.xin {
    width: 30rpx;
    height: 30rpx;
}

.msgList {
    box-sizing: border-box;
    padding: 30rpx;
    font-size: 22rpx;
    color: #7d7d7d;
}

/* 列表结束 */

/* 卡片列表结束 */

