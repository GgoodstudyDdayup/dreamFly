.video {
  width: 80%;
  padding: 30rpx 10%;
  height: 260rpx;
}
.back-img {
  position: absolute;
  top: 0;
  width: 100%;
  height: 320rpx;
  z-index: -1;
  overflow: hidden;
}
.back-img image{
  width: 120%;
  height: 120%;
  filter: blur(20rpx);
}
.video-item {
  box-sizing: border-box;
  height: 250rpx;
  width: 100%;
  padding-left: 200rpx;
  margin-bottom: 30rpx;
  display: flex;
}
.item-img {
  width: 200rpx;
  height: 250rpx;
  float: left;
  margin-left: -200rpx;
}
.item-img image {
  width: 100%;
  height: 100%;
}
.item-info {
  position: relative;
  width: 95%;
  height: 100%;
  padding-left: 5%;
  display: flex;
  flex-direction: column;
}
.info-title {
  color: white;
  text-shadow: 0 0 5rpx rgba(0, 0, 0, 0.4);
  font-weight: 600;
  font-size: 30rpx;
}
.info-content {
  position: absolute;
  bottom: 0;
  color: white;
  text-shadow: 0 0 5rpx rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
}

.xuzhi {
  height: 70rpx;
  width: 90%;
  padding: 0 5%;
  border-radius: 10rpx 10rpx 0 0;
  margin-top: -10rpx;
  background-color: #f8f8f8;
  line-height: 70rpx;
}
.xuzhi image {
  width: 25rpx;
  height: 25rpx;
  margin: 0 10rpx;
}
.xuzhi text {
  color: #473e3e;
  font-size: 24rpx;
}