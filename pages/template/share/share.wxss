/* pages/template/share/share.wxss */

/* 分享按钮样式 */

.share {
    margin-left: 20rpx;
    width: 50rpx;
    height: 45rpx;
    vertical-align: middle;
}

/* 分享弹窗样式开始 */

.share-friend {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
}

.share-friend-content {
    width: 600rpx;
    /* height: 700rpx; */
}

.share-top {
    width: 100%;
    height: 300rpx;
    display: block;
}

.share-title {
    font-size: 36rpx;
    padding: 40rpx;
}

.share-bottom {
    padding-bottom: 70rpx;
    background: white;
}

.fenxiang-box {
    display: flex;
    justify-content: space-between;
    margin-top: 50rpx;
    padding: 0 113rpx;
}

.fenxiang-item {
    text-align: center;
}

.fenxiang-item image {
    width: 110rpx;
    height: 110rpx;
}

.close-button {
    width: 520rpx;
    height: 80rpx;
    margin: auto;
    text-align: center;
    font-size: 28rpx;
    line-height: 80rpx;
    color: white;
    margin-top: 50rpx;
}

.share-button {
    line-height: 1;
    background-color: #fff;
    border: none;
}

.share-button::after {
    border: none;
}

/* 分享弹窗样式结束 */

/* canvas生成小程序二维码 */

.canvas {
    position: fixed;
    width: 100%;
    height: 100%;
    top: -1000rpx;
    left: -1000rpx;
    z-index: 1000;
    background: #fff;
}
