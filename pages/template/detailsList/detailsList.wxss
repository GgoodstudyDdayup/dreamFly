.video {
  width: 90%;
  padding: 0 5%;
}
.video-item {
  height: 250rpx;
  margin-bottom: 30rpx;
  display: flex;
}
.item-img {
  width: 30%;
  height: 100%;
}
.item-img navigator {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.item-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.item-info {
  width: 68%;
  height: 100%;
  padding-left: 2%;
  display: flex;
  flex-direction: column;
  justify-content: space-between ;
}
.info-title {
  color: #473e3e;
  font-weight: 600;
  font-size: 30rpx;
  height: 80rpx;
   
}
.info-content,.info-site {
  margin-top: 30rpx;
  color: #888888;
  font-size: 24rpx;
 
}
.info-content{
   margin-bottom: -80rpx;
}