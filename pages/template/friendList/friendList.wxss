.ul {
  padding: 0 5%;
  width: 90%;
}
.li {
  box-sizing: border-box;
  padding-left: 90rpx;
  padding-right: 120rpx;
  width: 100%;
  height: 135rpx;
  line-height: 135rpx;
  color: #4f4747;
  font-size: 24rpx;
}
.li image {
  width: 90rpx;
  height: 90rpx;
  float: left;
  border-radius: 50%;
  margin-left: -90rpx;
  margin-top: 18rpx;
}
.li text {
  padding-left: 20rpx;
}
.li .watch {
  width: 100rpx;
  height: 38rpx;
  border: 1rpx solid #ea4479;
  border-radius: 0;
  color: #fff;
  font-size: 22rpx;
  float: right;
  margin-right: -120rpx;
  margin-top: 50rpx;
  line-height: 38rpx;
  text-align: center;
  background:#ee8183;
}

.li .price {
  font-size: 24rpx;
  float: right;
  margin-right: -80rpx;
  color: #888;
}