/* 头部开始 */
page{
  padding-bottom: 0;
}
.avtive-nav{
  color: #5bc9d4;
  border-bottom:5rpx solid #5bc9d4 
}
.header{
    padding: 25rpx;
}
.header-top{
    display: flex;
    justify-content: space-between;
}
.header-content{
    text-align: center;    
}
.touxiang{
    margin-top: 25rpx;
    position: relative;
}
.quxiao{
  position: absolute;
  padding: 5rpx 20rpx;
  background: #ccc;
  border-radius: 20rpx;
  right: 25rpx;
  top: 0;
}
.guanzhu{
  background: #ee8183;
  color: white;
}
.header-img{
    width: 100rpx;
    height: 100rpx;
    border-radius:50%; 
}
.username{
    margin-top: 20rpx;
    font-size: 30rpx;
    color: black;
}
.null{
    height: 20rpx;
    background: #f3f3f3;
}
.nav{
    display: flex;
}
.navItem{
    display: inline-block;
    width: 33.3%;
    box-sizing: border-box;
    text-align: center;
    padding: 20rpx 0;
}
.navItem text{
  display: inline-block;
  width: 100%;
  border-right: 1px solid #e6e6e6;
}
.nav text:nth-child(2){
    border-left:1px solid #e6e6e6;
    border-right:1px solid #e6e6e6; 
}
/* 头部结束 */
/* 列表开始 */
.listAll {
    background: #fff;
    padding: 0 0 16rpx;
    margin-bottom: 40rpx;
    /* box-shadow: 0 10rpx 10rpx rgb(233, 232, 232); */
  }
  
  .listTop {
    box-sizing: border-box;
    padding: 16rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
  }
  
  .listTopL {
    display: flex;
  }
  
  .listTopL image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: inline-block;
  }
  
  .userInfo {
    margin-left: 10rpx;
    line-height: 50rpx;
  }
  
  .name {
    color: #000;
    font-size: 34rpx;
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .date {
    font-size: 28rpx;
    color: #9c9c9c;
  }
  
  .logo {
    font-size: 28rpx;
    background: #b4edeb;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
    color: #fff;
    margin-top: 15rpx;
  }
  
  .picImg {
    display: flex;
    justify-content: space-between;
  }
  
  .picImg image {
    height: 390rpx;
    width: 100%;
  }
  .video {
    height: 390rpx;
    width: 100%;
  }
  .video image{
    width: 100%;
    height: 100%;
  }
  .video video{
    width: 100%;
  }
  .picImg image:nth-child(2) {
    margin-left: 16rpx;
  }
  
  .listTitle {
    font-size: 36rpx;
    font-weight: 700;
    box-sizing: border-box;
    padding: 16rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .bottomMenu {
    font-size: 24rpx;
    border-bottom: 1rpx solid #f1f1f1;
    margin: 0 10rpx;
    padding-bottom: 16rpx;
  }
  
.bottomMenu-img {
    width: 30rpx;
    height: 30rpx;
    margin-left: 16rpx;
    margin-right: 6rpx;
    vertical-align: middle;
  }
  
  .flaR {
    float: right;
  }
  
  .bottomMenu .mar-r-10 {
    margin-right: 10rpx;
  }
  
  .btn {
    padding: 0;
    margin: 0;
    display: inline-block;
    line-height: 0;
    border-radius: 0rpx;
    background: #fff;
  }
  button::after {
    border: none;
  }
  .msgList {
    box-sizing: border-box;
    padding: 30rpx;
    font-size: 24rpx;
    color: #7d7d7d;
  }
  