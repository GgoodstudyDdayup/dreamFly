/* 横向滚动开始 */

.scroll {
  background: #fff;
  overflow: hidden;
  width: 100%;
  white-space: nowrap;
  display: flex;
  border-bottom: 1rpx solid #eaeaea;
}

.navTitle {
  color: #282828;
  font-size: 26rpx;
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 16rpx 0;
}

.navTitleLine {
  color: #5bc9d4;
  font-size: 30rpx;
  display: inline-block;
  height: 55rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 10rpx 0;
  border-bottom: 5rpx solid #5bc9d4;
}

.navTitleCon {
  padding: 0 41.6rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-left: 1rpx solid f1f1f1;
  border-right: 1rpx solid #f1f1f1;
}

/* 横向滚动结束 */

/* 搜索开始 */

.searchFa {
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-shadow: 0rpx 5rpx 10rpx rgb(199, 199, 199);
}

.search {
  padding: 10rpx;
  display: flex;
  align-items: center;
  width: 70%;
}

.search image {
  width: 30rpx;
  height: 30rpx;
}

.input {
  width: 300rpx;
}

.searchInp {
  display: flex;
  background: #f1f1f1;
  width: 70%;
  padding: 6rpx 30rpx;
  border-radius: 10rpx;
}

.sousuo {
  font-size: 28rpx;
}

.sousuoText {
  color: #69edef;
  font-size: 36rpx;
  margin-left: 16rpx;
  font-weight: bold;
}

.chooseYear {
  font-size: 28rpx;
  color: #767676;
  line-height: 84rpx;
}

.chooseYear image {
width:30rpx;
height:25rpx;
vertical-align:middle;
margin-right:20rpx;
margin-left:13rpx;

}

/* 搜索结束 */


/* 列表开始 */

.shopList {
  margin: 64rpx;
  box-shadow: 0rpx 5rpx 30rpx rgb(146, 146, 146);
  position: relative;
  border-radius: 10rpx;
}

.shopListPart {
  width: 110%;
  height: 300rpx;
  position: absolute;
  top: 100rpx;
  left: -5%;
  box-shadow: 0rpx 6rpx 16rpx rgb(175, 175, 175);
  border-radius: 10rpx;
  overflow: hidden;
}

#myAudio{
  width: 100%;
  height: 50rpx;
}

.shopListPart image {
  width: 100%;
  height: 100%;
}

.shopListTitle {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
  box-sizing: border-box;
  padding: 24rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.shopListTitle :nth-child(1) {
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shopListTop {
  box-sizing: border-box;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.shopListTopL {
  color: #060206;
  text-align: center;
}

.year {
  font-size: 24rpx;
  letter-spacing: 40rpx;
}

.line {
  height: 1rpx;
  background: #969496;
  width: 85%;
}

.day {
  font-size: 38rpx;
  font-weight: 700;
  padding-right: 15%;
}

.shopListTopR {
  font-size: 32rpx;
  line-height: 80rpx;
}

.shopListTopR image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.shopListBottom {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.shopListBottomL image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.shopListBottomL text {
  color: #9f9f9f;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-left: 4rpx;
}

.xin{
  width: 32rpx;
  height: 32rpx;
}

.msgList{
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 22rpx;
  color: #7D7D7D;
}

/* 列表结束 */


