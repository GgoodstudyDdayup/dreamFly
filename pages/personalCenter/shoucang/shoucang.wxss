/* pages/personalCenter/myOrder/myOrder.wxss */

/* 横向滚动开始 */

.scroll {
    background: #fff;
    overflow: hidden;
    width: 100%;
    white-space: nowrap;
    display: flex;
    border-bottom: 1rpx solid #eaeaea;
    justify-content: space-between;
}

.navTitle {
    width: 20%;
    color: #282828;
    font-size: 26rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    padding: 16rpx 0;
}

.navTitleLine {
    width: 20%;
    color: #5bc9d4;
    font-size: 30rpx;
    display: inline-block;
    height: 55rpx;
    line-height: 50rpx;
    text-align: center;
    padding: 10rpx 0;
    border-bottom: 5rpx solid #5bc9d4;
}

.navTitleCon {
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-left: 1rpx solid #f1f1f1;
    /* border-right: 1rpx solid #f1f1f1; */
}

/* 横向滚动结束 */

/* 订单数量开始 */

.order {
    background: #fff;
    box-sizing: border-box;
    padding: 16rpx;
    box-shadow: 0rpx 10rpx 20rpx rgb(194, 194, 194);
}

.order text:nth-child(1) {
    font-size: 32rpx;
    color: #282828;
    margin-right: 16rpx;
}

.order text:nth-child(2) {
    font-size: 38rpx;
    color: #ff6e9b;
}

/* 订单数量结束 */

/* ordreList开始 */

.orderList {
    margin-top: 20rpx;
    background: #fff;
    padding-bottom: 26rpx;
}

.topTime {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 10rpx 16rpx;
    align-items: center;
    font-size: 28rpx;
    color: #999;
}

.topTime image {
    width: 40rpx;
    height: 40rpx;
}

.orderCon {
    display: flex;
    box-sizing: border-box;
    padding: 0rpx 18rpx 10rpx;
}

.orderConPic {
    width: 28%;
    height: 180rpx;
}

.orderConPic image {
    width: 180rpx;
    height: 180rpx;
}

.ticket {
    width: 72%;
    box-sizing: border-box;
    position: relative;
}

.ticketO {
    width: 100%;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    align-items: center;
}

.ticketO view:nth-child(1) {
    font-size: 32rpx;
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.ticketO view:nth-child(2) {
    font-size: 28rpx;
    color: #9f9f9f;
    vertical-align: middle;
}

.colorR {
    color: #ff6e9b;
}

.fontSize26 {
    font-size: 26rpx;
}

.fontSize40 {
    font-size: 40rpx;
}

.allMoney {
    position: absolute;
    bottom: 0;
    left: 0;
    font-size: 24rpx;
    color: #333;
}

/* 头部两个开始 */

.activity {
    display: flex;
    margin-top: 20rpx;
}

.activityPart {
    width: 44%;
    margin-left: 4%;
    height: 200rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0rpx 5rpx 16rpx rgb(146, 146, 146);
}

.activityPart image {
    width: 100%;
    height: 100%;
}

/* 头部两个结束 */

/* 列表开始 */

.shopList {
    margin: 64rpx;
    height: 500rpx;
    box-shadow: 0rpx 5rpx 30rpx rgb(146, 146, 146);
    position: relative;
    border-radius: 10rpx;
}

.shopListPart {
    width: 110%;
    height: 300rpx;
    position: absolute;
    top: 100rpx;
    left: -5%;
    box-shadow: 0rpx 6rpx 16rpx rgb(175, 175, 175);
    border-radius: 10rpx;
    overflow: hidden;
}

.shopListPart image {
    width: 100%;
    height: 100%;
}

.shopListTitle {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    color: #fff;
    font-size: 24rpx;
    font-weight: 700;
    box-sizing: border-box;
    padding: 24rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

.shopListTitle :nth-child(1) {
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.shopListTop {
    box-sizing: border-box;
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    padding: 10rpx 30rpx;
    display: flex;
    justify-content: space-between;
}

.shopListTopL {
    color: #060206;
    text-align: center;
}

.year {
    font-size: 24rpx;
    letter-spacing: 40rpx;
}

.line {
    height: 1rpx;
    background: #969496;
    width: 85%;
}

.day {
    font-size: 38rpx;
    font-weight: 700;
    padding-right: 15%;
}

.shopListTopR {
    font-size: 32rpx;
    line-height: 80rpx;
}

.shopListTopR image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}

.shopListBottom {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 30rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.shopListBottomL image {
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.shopListBottomL text {
    color: #9f9f9f;
    font-size: 24rpx;
    margin-right: 16rpx;
    margin-left: 4rpx;
}

.xin {
    width: 32rpx;
    height: 32rpx;
}

/* 列表结束 */

/* 卡片列表结束 */

/* 底部导航栏颜色 */

.on_cor text {
    color: #00a2e9;
}

.on_cor icon {
    color: #00a2e9;
}

/* ordreList结束 */

/* 无订单 */

.noOrder {
    text-align: center;
    margin-top: 250rpx;
}

.noOrder icon {
    font-size: 150rpx;
    color: #e0e0e0;
}
