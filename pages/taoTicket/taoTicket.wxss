.video {
  width: 90%;
  padding: 0 5%;
}

.video-item {
  height: 250rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: flex-start;
}

.item-img {
  width: 30%;
  height: 100%;
}

.video-itemView {
  width: 100%;
  height: 250rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: flex-start;
}

.item-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.item-info {
  width: 68%;
  height: 100%;
  padding-left: 2%;
  display: flex;
  flex-direction: column;
}

.info-title {
  color: #473e3e;
  font-weight: 600;
  font-size: 30rpx;
  height: 80rpx;
}

.info-name, .info-num, .info-price {
  margin-top: 20rpx;
  color: #888;
  font-size: 24rpx;
}

.info-price {
  color: #ee8183;
}

.m-tao-fixed {
  position: fixed;
  width: 100%;
  height: 50rpx;
  bottom: 50rpx;
  padding: 0 38rpx;
}

.m-tao-fixed text {
  text-align: center;
  width: 90%;
  height: 80rpx;
  border-radius: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: white;
  display: inline-block;
  background: linear-gradient(10deg, #ff69b4, #dc143c);
}
