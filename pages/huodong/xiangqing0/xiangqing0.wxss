/* pages/hudong/hudong.wxss */

.swiperAll {
    width: 100%;
    overflow: visible;
    height: 380rpx;
}

.swiperItem {
    box-sizing: border-box;
    border-radius: 20rpx;
    padding: 0 48rpx;
}

.slide-image {
    margin-top: 2%;
    width: 100%;
    height: 92%;
    border-radius: 20rpx;
    box-shadow: 0rpx 5rpx 10rpx gray;
}

/* 横向滚动开始 */

.scroll {
    margin-left: 0;
    margin-right: 0;
    margin-top: 20rpx;
    /* margin: 20rpx 0 ; */
    background: #fff;
    overflow: hidden;
    width: 100%;
    white-space: nowrap;
    display: flex;
}

.navTitle {
    color: #282828;
    font-size: 24rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    padding: 16rpx 0;
    border-bottom: 1px solid #e6e6e6;
    width: 25%;
}

.navTitleLine {
    width: 25%;
    color: #5bc9d4;
    font-size: 24rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    padding: 16rpx 0;
    border-bottom: 5rpx solid #5bc9d4;
}

.navTitleCon {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-left: 1rpx solid f1f1f1;
    border-right: 1rpx solid #f1f1f1;
}

/* 客服 */

.kefu {
    position: fixed;
    right: 0;
    top: 579rpx;
}
.none{
    display: none
}