/* pages/personalCenter/myOrder/QRCode.wxss */

.root {
  padding: 10rpx 20rpx;
}

.icon {
  width: 100%;
  text-align: center;
}

.myicon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.title {
  margin-top: 10rpx;
  text-align: center;
  font-size: 12pt;
  font-weight: bolder;
  color: black;
}

.mypic {
  margin: 30rpx auto 0rpx;
  height: 240rpx;
  width: 90%;
}

.mypic image {
  width: 100%;
  height: 100%;
}

.time-title {
  margin-top: 20rpx; 
  margin-left: 20rpx;
  font-size: 10pt;
  color: #808080;
}

.time-detail {
  margin-top: 15rpx;
  margin-left: 20rpx;
  font-size: 12pt;
  font-weight: bolder;
  color: black;
}

.line {
  width: 95%;
  height: 2rpx;
  background: gainsboro;
}

.my-qrcode {
  margin-top: 30rpx;
  text-align: center;
  width: 100%;
}

.my-qrcode image {
  width: 200rpx;
  height: 200rpx;
}

.my-qrcode text {
  display: block;
  color: black;
}

.my-qrcode view {
  margin-top: 20rpx;
  font-size: 10pt;
  color: #808080;
}
