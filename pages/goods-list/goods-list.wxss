/* 头部搜索 */
.headSearch {
  height: 88rpx;
  margin-top: 12rpx;
  padding: 0 3%
}
.headSearch view {
  float: left;
  
}
.headSearch-left {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  box-shadow: 0 0 12rpx rgba(0, 0, 0, 0.4);
}
.headSearch-left image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}
.headSearch-search {
  position: relative;
  /* width: 52%; */
  width: 80%;
  height: 88rpx;
  padding-left: 28rpx;
}
.headSearch-search .headSearch-search-icon {
  position: absolute;
  left: 28rpx;
  top: 50%;
  margin-top: -14rpx;
  width: 28rpx;
  height: 28rpx;
}
.headSearch-search .headSearch-search-icon image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 28rpx;
}
.headSearch-search input {
  width: 100%;
  height: 59rpx;
  border: 2rpx solid #9b969f;
  border-radius: 60rpx;
  margin-top: 14rpx;
  padding-left: 64rpx;
}
.headSearch .headSearch-right {
  float: right;
  width: 160rpx;
  height: 88rpx;
  padding-top: 6rpx;
}
.headSearch .headSearch-right navigator {
  display: inline-block;
  padding: 17rpx;
  width: 45rpx;
  height: 45rpx;
}
.headSearch .headSearch-right image {
  width: 45rpx;
  height: 45rpx;
}
/* 切换栏 */

.scroll {
    background: #fff;
    overflow: hidden;
    width: 100%;
    white-space: nowrap;
    display: flex;
    /* border-bottom: 1rpx solid #eaeaea; */
    justify-content: space-between;
    margin-bottom: 16rpx;
}

.navTitle {
    width: 50%;
    color: #282828;
    font-size: 26rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    padding: 16rpx 0;
}

.navTitleLine {
    width: 50%;
    color: #ea4479;
    font-size: 30rpx;
    display: inline-block;
    height: 55rpx;
    line-height: 50rpx;
